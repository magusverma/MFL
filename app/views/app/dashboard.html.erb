<section class="wrapper">
<div class="row">
        <% flash.each do |type, message| %>
          <div class="alert alert-info fade in" >
            <button class="close" data-dismiss="alert">×</button>
            <%= message %>
          </div>
        <% end %>
    <div class="col-lg-12 main-chart">
    <h1>
      Restaurants
    </h1>
        <div class="row mt">
        <% box_no=0 %>
        <% (1..4).to_a.each do |i| %>
          <% Restaurant.all.each do |restaurant| %>
            <% box_no +=1 %>
            <!-- <div class="col-md-3 col-sm-3 mb"> -->
            <div class="col-lg-3 col-md-4 col-sm-6 mb">
                <div class="white-panel pn">
                    <a href="/order/<%= restaurant.url %>" data-transition="pop">
                        <div class="centered">
                            <img src="<%= restaurant.photo_url %>" width="100%" height="100px" style="margin-bottom:5px;">
                        </div>
                    <div class="white-header">
                        <h5><%= restaurant.name %></h5>
                    </div>
                    <div class="row">
                        <div class="col-sm-11 col-xs-11 goleft">
                          <p class="ktt_tagOrange">
                            Restaurant Type                
                          </p> 
                          <br><br>
                        </div>
                        <div class="col-sm-3 col-xs-3 goleft">
                            <p><i class="fa fa-heart"></i> <%= restaurant.loved_by %></p>
                        </div>
                        <div class="col-sm-8 col-xs-8" style="text-align:justify">
                          <%= restaurant.about[0..100]+" ..." %>
                        </div>
                    </div>
                    

                    <br>
                    <div style="position:absolute; bottom:0px;" class="col-sm-11 col-xs-11 goleft" id="<%= box_no %>-bar">
                      <% c = Club.get_active_club(restaurant) %>
                      
                      <div class="row">
                        <div class="col-sm-2">
                        </div> 
                        <div class="col-sm-6">
                         <h4 style="display:inline;">₹ <%= c.get_diff.to_i %></h4> needed 
                        </div> 
                        <div class="col-sm-4">
                          <div class="timer_div" style="display:inline;"><%= c.get_time %></div>
                        </div>
                                               
                      </div>
                      <div class="progress progress-striped" style="width:80%;align-content: center;margin-left: 10%;height: 12px">
                          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= c.get_percent %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= c.get_percent %>%">
                              <span class="sr-only"><%= c.get_percent %>% Complete (success)</span>
                          </div>
                      </div>
                    </div>
                    </a>
                </div>
            </div>
            
            <!-- /col-md-4 -->
          <% end %>
          <% end %>
          
        </div>
        <!-- /row -->

					
                  </div><!-- /col-lg-9 END SECTION MIDDLE -->
                  
                  
      <!-- **********************************************************************************************************************************************************
      RIGHT SIDEBAR CONTENT
      *********************************************************************************************************************************************************** -->                  
                  
              </div><!--/row -->
          </section>
      